<style>
    :global(body) {
        background: #000;
        color: #fff;
    }

    .vertical {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .container {
        padding: 20px;
    }

    h1 {
        gap: 10px;
    }

    .horizontal {
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    a:link, a:visited {
        color: #fff;
    }
</style>